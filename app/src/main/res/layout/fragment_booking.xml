<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.booking.My_Booking">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_margin="@dimen/_3sdp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="10">

            <ImageView
                android:layout_width="0dp"
                android:layout_gravity="center"
                android:src="@android:drawable/star_off"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <Space
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="Completed"
                android:fontFamily="@font/fontexbold"
                android:textSize="@dimen/_12ssp"
                android:gravity="start"
                android:padding="@dimen/_7sdp"
                android:textColor="@android:color/black"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"/>

            <Space
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="On 02-05-2021"
                android:fontFamily="@font/fontex"
                android:textSize="@dimen/_10ssp"
                android:gravity="end"
                android:padding="@dimen/_7sdp"
                android:textColor="@android:color/black"
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardUseCompatPadding="true"
            card_view:cardBackgroundColor="@android:color/white"
            card_view:cardCornerRadius="@dimen/_7sdp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_120sdp"
                android:background="@drawable/ic_news_background"
                android:gravity="center">

                <ImageView
                    android:id="@+id/p_img_1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_5sdp"
                    android:layout_alignParentBottom="true"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/p_title_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/fontex"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="Heading Titles"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/_11ssp" />

                    <LinearLayout
                        android:id="@+id/i"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:orientation="horizontal"
                        android:weightSum="10">

                        <TextView
                            android:id="@+id/p_rs_1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:text="₹1500"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:textColor="@android:color/white"
                            android:fontFamily="@font/fontexbold"
                            android:gravity="start"
                            android:textSize="@dimen/_12ssp"
                            android:layout_marginLeft="@dimen/_5sdp" />

                        <TextView
                            android:id="@+id/p_ord_1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="5"
                            android:text="₹1500"
                            android:textColor="@android:color/white"
                            android:fontFamily="@font/fontex"
                            android:gravity="start"
                            android:textSize="@dimen/_11ssp"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:text="45 Min"
                            android:textColor="@android:color/white"
                            android:fontFamily="@font/fontex"
                            android:gravity="end"
                            android:textSize="@dimen/_11ssp"/>

                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>


</RelativeLayout>